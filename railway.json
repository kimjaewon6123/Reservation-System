{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "mvn clean package"
  },
  "deploy": {
    "startCommand": "java -Dserver.port=$PORT $JAVA_OPTS -jar target/reservation-system-1.0-SNAPSHOT.jar",
    "healthcheckPath": "/",
    "healthcheckTimeout": 100,
    "restartPolicyType": "ON_FAILURE"
  }
} 